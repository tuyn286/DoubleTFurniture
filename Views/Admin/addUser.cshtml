@model List<DoubleTFurniture.Models.User>
@{
    ViewBag.Title = "addUser";
    Layout = "~/Views/Shared/admin_layout.cshtml";
}

<div class="content-wrapper">
    <div class="container">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    THÊM SẢN PHẨM
                </div>
                <div class="panel-body">
                    <!-- thêm action vào -->
                    <form role="form" action="~/Admin/addUserHandle" enctype="multipart/form-data">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Mã người dùng</label>
                                <input class="form-control" type="text" name="manguoidung" />
                            </div>
                            <div class="form-group">
                                <label>Tên người dùng</label>
                                <input class="form-control" type="text" name="tennguoidung" />
                            </div>
                            <div class="form-group">
                                <label>Tên đăng nhập</label>
                                <input class="form-control" type="text" name="tendangnhap"/>
                            </div>

                            <div class="form-group">
                                <label>Mật khẩu</label>
                                <textarea class="form-control" rows="3" name="matkhau"></textarea>
                            </div>
                            <div class="form-group">
                                <label>Địa chỉ</label>
                                <input class="form-control" type="text" name="diachi" />
                            </div>
                        </div>
                       

                        <button type="submit" class="btn btn-info" style="float: right; margin-right: 15px;margin-top: 50px;">Sửa người dùng </button>

                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

