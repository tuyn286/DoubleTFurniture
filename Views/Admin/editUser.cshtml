﻿﻿@model DoubleTFurniture.Models.User
@{
    ViewBag.Title = "editUser";
    Layout = "~/Views/Shared/admin_layout.cshtml";
}

<div class="content-wrapper">
    <div class="container">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    THÊM SẢN PHẨM
                </div>
                <div class="panel-body">
                    <!-- thêm action vào -->
                    <form role="form" action="~/Admin/editUserHandle" enctype="multipart/form-data">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Mã người dùng</label>
                                <input class="form-control" type="text" value="@Model.manguoidung" name="manguoidung" />
                            </div>
                            <div class="form-group">
                                <label>Tên người dùng</label>
                                <input class="form-control" type="text" value="@Model.tennguoidung" name="tennguoidung" />
                            </div>
                            <div class="form-group">
                                <label>Tên đăng nhập</label>
                                <input class="form-control" type="text" value="@Model.tendangnhap" name="tendangnhap" />
                            </div>

                            <div class="form-group">
                                <label>Mật khẩu</label>
                                <input class="form-control" type="text" value="@Model.matkhau" name="matkhau" />
                            </div>
                            <div class="form-group">
                                <label>Địa chỉ</label>
                                <input class="form-control" type="text" value="@Model.diachi" name="diachi" />
                            </div>
                        </div>


                        <button type="submit" class="btn btn-info" style="float: right; margin-right: 15px;margin-top: 50px;">Sửa người dùng </button>

                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

