
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/admin_layout.cshtml";
}

<div class="content-wrapper">
    <div class="container">
        <div class="row pad-botm">
            <div class="col-md-12">
                <h4 class="header-line">TRANG CHỦ QUẢN TRỊ VIÊN</h4>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <!-- đường dẫn đến table user -->
                <a href="~/Admin/Users">
                    <div class="alert alert-info back-widget-set text-center">
                        <i class="fa fa-user fa-5x"></i>
                        <h3>@ViewBag.u NGƯỜI DÙNG </h3>
                    </div>
                </a>
            </div>
            <div class="col-md-6 ">
                <!-- đường dẫn đến table sản phẩm -->
                <a href="~/Admin/Products">
                    <div class="alert alert-success back-widget-set text-center">
                        <i class="fa fa-briefcase fa-5x"></i>
                        <h3>@ViewBag.pro SẢN PHẨM</h3>
                    </div>
                </a>
            </div>

        </div>

    </div>
</div>

